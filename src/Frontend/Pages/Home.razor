@page "/"

<div class="container-fluid p-0">
<!-- Hero Section -->
<section class="text-center text-white d-flex flex-column justify-content-center align-items-center"
         style="background: url('images/trading-hero2.jpg') no-repeat center center; background-size: cover; height: 80vh;">
    <h1 class="display-4 fw-semibold">Trade Smart. Trade Safe.</h1>
    <p class="lead">Practice your strategy. No risk. Any asset.</p>
